// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Video {
  id               String   @id @default(cuid())
  originalUrl      String
  coverUrl         String?
  processedUrl     String? // Processed video with doodle cover embedded as first frame
  aspectRatio      String   @default("auto") // Auto-detected from video metadata, e.g. '16:9', '1:1', '9:16'
  status           String // 'uploaded' | 'processing' | 'completed' | 'failed'
  processingTimeMs Int? // For analytics
  metadata         Json? // Can store width, height, duration, etc.
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}
